{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "displayName": "Windows x64 Debug",
      "description": "Sets Ninja generator, compilers, x64 architecture, build and install directory, debug build type",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Solutions/${presetName}",
      "warnings": { "dev": false },
      "errors": { "dev": false },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "OPTION_RUNTIME_CVAR_OVERRIDES": "ON",
        "OPTION_REMOTE_CONSOLE": "ON",
        "OPTION_DX_RENDERER": "ON",
        "OPTION_VK_RENDERER": "OFF",
        "USE_STEAM": "OFF",
        "OPTION_DEDICATED_SERVER": "OFF",

        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "${sourceDir}/Tools/CMake/toolchain/windows/WindowsPC-MSVC.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_INSTALLER": "ON",
        "VCPKG_ROOT": {
          "value": "$env{solutionDir}/vcpkg",
          "type": "FILEPATH"
        },

        "ADD_PACKAGE_DEP_MODE": "OFF"

      },
      "environment": {
        "solutionDir": "${sourceDir}/Solutions",
        "DXSDK_DIR": "${sourceDir}/lib/DirectX-SDK-June2010"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "x64-debug",
      "inherits": "base",
      "displayName": "x64 Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "OUTPUT_DIRECTORY_SUFFIX": "debug"
      }
    },
    {
      "name": "x64-release",
      "inherits": "base",
      "displayName": "x64 Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "OUTPUT_DIRECTORY_SUFFIX": "relase"
      }
    },
    {
      "name": "vs2019",
      "inherits": "base",
      "displayName": "VS2019 Config",
      "description": "Visual Studio 2019 Config generator",
      "generator": "Visual Studio 16 2019",
      "cacheVariables": {
        "CMAKE_SYSTEM_VERSION": "10"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-debug",
      "configurePreset": "x64-debug"
    },
    {
      "name": "default-release",
      "configurePreset": "x64-release"
    },
    {
      "name": "vs2019",
      "configurePreset": "vs2019"
    }
  ]
}